              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/article.svg')
              p Статьи
            md-list-item(ng-click='SideNavLeft.close()')
              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/calendar.svg')
              p Мой Календарь
            md-list-item(ng-click='SideNavLeft.close()')
              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/meeting.svg')
              p Встречи
            md-list-item(ng-click='SideNavLeft.close()')
              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/clipy.svg')
              p Избранное
            md-list-item(ng-click='SideNavLeft.close()')
              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/wishlist.svg')
              p Доска желаний
      md-content(flex, class='md-padding')
        div(ui-view)
      md-sidenav(class='md-sidenav-right',
                        md-component-id='right',
                        md-is-locked-open="$mdMedia('gt-lg')")
        md-content(ng-controller='SideNavLeftController as SideNavLeft')
          md-list
            md-list-item(ng-click="$state.go('profile'); SideNavLeft.close()")
              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/profile.svg')
              p Мой Кабинет
            md-list-item(ng-click='SideNavLeft.close()')
              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/friends.svg')
