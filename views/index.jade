              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/calendar.svg')
              p Мой Календарь
            md-list-item(ng-click='SideNavLeft.close()')
              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/meeting.svg')
              p Встречи
            md-list-item(ng-click='SideNavLeft.close()')
              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/clipy.svg')
              p Избранное
            md-list-item(ng-click='SideNavLeft.close()')
              md-icon(style="fill:black;font:bold;", md-svg-src='images/icons/wishlist.svg')
              p Доска желаний
