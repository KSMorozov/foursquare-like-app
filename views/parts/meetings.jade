      md-list-item.md-whiteframe-z1(ng-repeat='meeting in Meetings.meetings',
                   layout='row', layout-sm='column',
                   layout-gt-sm-wrap, layout-fill,
                   layout-align='start start', layout-sm-align='center',
                   style='background-color: #F5F5F5;padding:0px 0px;margin:15px 0px;')
        img(ng-src='{{meeting.picture}}', class='md-card-image',
            flex-gt-sm='50', flex='100')
        md-content(style='background-color: #F5F5F5;padding-left:10px;', layout-fill,
                   flex-gt-sm='50', flex='100')
